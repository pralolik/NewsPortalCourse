{% extends 'base.html.twig' %}

{% block title %}Admin Page News{% endblock %}

 {% block javascripts %}
     <script src="{{ asset('js/jquery-3.2.1.min.js') }}" type="text/javascript"></script>
     <script src="{{ asset('js/ajaxGrid.js') }}" type="text/javascript"></script>

 {% endblock %}
{% block body %}
    <div class="admin-news">
        <h1 class="text-center">News list</h1>
                <button class="btn btn-small btn-inverse" type="button"><a href="{{ path('news_create') }}">Create new
                        news</a></button>
        <div id="entities-grid">
        </div>
        <div id="pagination-wrapper" class="zui-pager col-md-12 col-xs-12 col-sm-12 col-lg-12 text-center">
        </div>
    </div>



    <script>
        $("#entities-grid").ajaxgrid({
            dataUrl: "http://127.0.0.1:8000/ajax/news",
            editUrl: "http://127.0.0.1:8000/news/edit/",
            sortableColumns: ["id", "name", "description", "createdAt", "user",
                "numberOfViews"],
            filterableColumns: ["id", "name", "description", "createdAt", "user",
                "numberOfViews"],
            rowsPerPage: 5,
            key: 'news'
        });
    </script>

{% endblock %}
