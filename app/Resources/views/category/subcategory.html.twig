{% extends 'base.html.twig' %}
{% block title %}Category news!{% endblock %}
{% block body %}
    <div class="main-container pagination-centered form-group">
        {#{% if error %}#}
            {#<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
        {#{% endif %}#}
        {% for qnews in  news %}
        <article>
            <h3 class="title-bg"><a href="blog-single.htm">{{ qnews['name'] }}</a></h3>
                <div class="post-summary">
                <p>
                    {{ qnews['description'] }}
                </p>
                <div class="post-summary-footer">
                    <button class="btn btn-small btn-inverse" type="button"><a href="{{ path('news', {'newsname': qnews['id']}) }}">Read more</a></button>
                    <ul class="post-data">
                        <li><i class="icon-calendar"></i> {{ qnews['created_at'] }}</li>
                        <li><i class="icon-user"></i>Admin</li>
                    </ul>
                </div>
                </div>
        </article>
        {% endfor %}
    </div>
{% endblock %}
